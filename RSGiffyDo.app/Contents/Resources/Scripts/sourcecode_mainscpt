on open filelist	repeat with i in filelist		# AppleScript expects to iterate through every file it got in the drag-in		set myPath to (quoted form of ((the POSIX path of (path to me)) & "main"))		set gifTarget to (quoted form of (POSIX path of i))		do shell script myPath & " " & gifTarget		return #LOL WE'RE ONLY GOING TO OPERATE ON THE FIRST ONE	end repeatend open# The actual bash script "main" itself handles what happens if some# user decides to just run the applet without dragging anything in,# so... let it...set myPath to (quoted form of ((the POSIX path of (path to me)) & "main"))do shell script myPath